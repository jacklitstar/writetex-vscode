{
  "name": "writetex-vscode",
  "displayName": "WriteTex",
  "description": "Write LaTeX with AI powered OCR",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:writetex.startServer",
    "onCommand:writetex.stopServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "writetex.startServer",
        "title": "WriteTex: Start OCR Server"
      },
      {
        "command": "writetex.stopServer",
        "title": "WriteTex: Stop OCR Server"
      },
      {
        "command": "writetex.showCommands",
        "title": "WriteTex: Show Actions"
      }
    ],
    "configuration": {
      "title": "WriteTex",
      "properties": {
        "writetex.port": {
          "type": "number",
          "default": 53421,
          "description": "Port for the WriteTex OCR HTTP server"
        },
        "writetex.serviceName": {
          "type": "string",
          "default": "WriteTex VS Code",
          "description": "mDNS service name advertised on the local network"
        },
        "writetex.contextLineRadius": {
          "type": "number",
          "default": 100,
          "description": "Number of lines of context before/after the cursor to include"
        },
        "writetex.contextCharLimit": {
          "type": "number",
          "default": 4000,
          "description": "Maximum characters of surrounding context to include in the prompt"
        },
        "writetex.requireToken": {
          "type": "boolean",
          "default": false,
          "description": "Require a shared token in requests for authentication"
        },
        "writetex.token": {
          "type": "string",
          "default": "",
          "markdownDescription": "Shared secret token required when `writetex.requireToken` is true"
        },
        "writetex.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI-compatible API endpoint URL"
        },
        "writetex.apiModel": {
          "type": "string",
          "default": "gpt-4o",
          "description": "Model name to use for vision OCR (e.g., gpt-4o, gpt-4-vision-preview)"
        },
        "writetex.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "API key for the OpenAI-compatible service. **Warning**: Stored in plaintext in settings.json"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "bonjour-service": "^1.2.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}